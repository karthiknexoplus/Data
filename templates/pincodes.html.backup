.pincode { font-weight: 800; color: #2c3e50; letter-spacing: 1px; }.pincode { font-weight: 800; color: #2c3e50; letter-spacing: 1px; }
.card-body { padding: 14px; }
.office { margin: 0 0 8px 0; color: #2c3e50; font-size: 16px; }
.meta { display: flex; gap: 8px; flex-wrap: wrap; }

/***** Pagination *****/
.pagination { display: flex; align-items: center; justify-content: center; gap: 10px; margin-top: 16px; }
.page-btn { padding: 8px 12px; border: 1px solid #dfe6ee; border-radius: 8px; text-decoration: none; color: #34495e; background: #fff; }
