{% extends "base.html" %}

{% block content %}
<div class="dashboard-container">
    <!-- Header -->
    <header class="main-header">
        <div class="header-left">
            <a href="{{ url_for('in_data') }}" class="logo-link">
                <div class="logo"><div class="logo-icon"></div></div>
                <h1 class="app-title">Data Explorer</h1>
            </a>
        </div>
        <div class="header-right">
            <div class="user-info">
                <span class="welcome-text">Welcome, {{ username }}</span>
                <a href="{{ url_for('logout') }}" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </div>
            <div class="user-avatar">K</div>
            <div class="menu-icon">â‹®</div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="main-nav">
        <ul class="nav-list">
            <li class="nav-item"><a href="{{ url_for('in_data') }}"><i class="fas fa-database"></i><span>IN Data</span></a></li>
            <li class="nav-item"><a href="{{ url_for('bai_members') }}"><i class="fas fa-building"></i><span>BAI Data</span></a></li>
            <li class="nav-item"><a href="{{ url_for('colleges') }}"><i class="fas fa-graduation-cap"></i><span>Colleges</span></a></li>
            <li class="nav-item"><a href="{{ url_for('edu_list_tn') }}"><i class="fas fa-university"></i><span>EDU List TN</span></a></li>
            <li class="nav-item"><a href="{{ url_for('iia_cbe') }}"><i class="fas fa-industry"></i><span>IIA CBE</span></a></li>
            <li class="nav-item"><a href="{{ url_for('cozcena') }}"><i class="fas fa-building"></i><span>COZCENA</span></a></li>
            <li class="nav-item"><a href="{{ url_for('sr_office') }}"><i class="fas fa-landmark"></i><span>SR Office</span></a></li>
            <li class="nav-item"><a href="{{ url_for('cbe_wards') }}"><i class="fas fa-map-marker-alt"></i><span>CBE Wards</span></a></li>
            <li class="nav-item active"><a href="{{ url_for('pincodes') }}"><i class="fas fa-mail-bulk"></i><span>Pincodes</span></a></li>
        </ul>
    </nav>

    <!-- Content -->
    <main class="main-content">
        <div class="content-header">
            <div class="header-content">
                <h2><i class="fas fa-mail-bulk"></i> Pincode Directory</h2>
                <p class="subtitle">Search post offices by State, District, Office, or Pincode</p>
                <div class="header-actions">
                    <div class="summary-chips">
                        {% if current_state %}<span class="chip"><i class="fas fa-flag"></i> {{ current_state }}</span>{% endif %}
                        {% if current_district %}<span class="chip"><i class="fas fa-city"></i> {{ current_district }}</span>{% endif %}
                        {% if search_query %}<span class="chip"><i class="fas fa-search"></i> {{ search_query }}</span>{% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <form method="GET" class="filters-card">
            <div class="filters-row">
                <div class="filter-col">
                    <label><i class="fas fa-flag"></i> State</label>
                    <select name="state" class="input" onchange="this.form.submit()">
                        <option value="">All States</option>
                        {% for s in states %}
                        <option value="{{ s }}" {% if s==current_state %}selected{% endif %}>{{ s }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="filter-col">
                    <label><i class="fas fa-city"></i> District</label>
                    <select name="district" class="input" onchange="this.form.submit()">
                        <option value="">All Districts</option>
                        {% for d in districts %}
                        <option value="{{ d }}" {% if d==current_district %}selected{% endif %}>{{ d }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="filter-col flex-1">
                    <label><i class="fas fa-search"></i> Search</label>
                    <div class="search-wrap">
                        <input class="input" type="text" name="search" value="{{ search_query }}" placeholder="Office / Pincode">
                        <button type="submit" class="btn primary"><i class="fas fa-search"></i> Search</button>
                        {% if current_state or current_district or search_query %}
                        <a href="{{ url_for('pincodes') }}" class="btn light"><i class="fas fa-times"></i> Clear</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </form>

        <!-- Summary + Pagination Top -->
        <div class="summary-row">
            <div class="summary-card">
                <div class="summary-icon"><i class="fas fa-mail-bulk"></i></div>
                <div class="summary-text">
                    <h3>{{ total_records }} Pincode Offices</h3>
                    <p>Page {{ current_page }} of {{ total_pages }}</p>
                </div>
            </div>
            {% if total_pages > 1 %}
            <div class="paginator">
                {% if current_page > 1 %}
                <a class="btn light" href="{{ url_for('pincodes', page=1, state=current_state, district=current_district, search=search_query) }}"><i class="fas fa-angle-double-left"></i></a>
                <a class="btn light" href="{{ url_for('pincodes', page=current_page-1, state=current_state, district=current_district, search=search_query) }}"><i class="fas fa-angle-left"></i> Prev</a>
                {% endif %}
                <span class="page-indicator">{{ current_page }} / {{ total_pages }}</span>
                {% if current_page < total_pages %}
                <a class="btn light" href="{{ url_for('pincodes', page=current_page+1, state=current_state, district=current_district, search=search_query) }}">Next <i class="fas fa-angle-right"></i></a>
                <a class="btn light" href="{{ url_for('pincodes', page=total_pages, state=current_state, district=current_district, search=search_query) }}"><i class="fas fa-angle-double-right"></i></a>
                {% endif %}
            </div>
            {% endif %}
        </div>

        {% if pincode_groups %}
        <!-- Cards Grid (grouped by pincode) -->
        <div class="grid">
            {% for g in pincode_groups %}
            {% set row = g.main %}
            <div class="card" id="pin-{{ g.pincode }}" data-pin="{{ g.pincode }}" role="button" tabindex="0" data-pinblob='{{ {"pincode": g.pincode, "main": g.main, "others": g.others}|tojson|safe }}'>
                <div class="card-header">
                    <div class="card-header-left">
                    </div>
                </div>
                <div class="card-body">
                    <h3 class="office"><i class="fas fa-building"></i> {{ row.officename }}</h3>
                    <div class="meta">
                        <span class="chip"><i class="fas fa-flag"></i> {{ row.statename }}</span>
                        <span class="chip"><i class="fas fa-city"></i> {{ row.district }}</span>
                        <span class="chip {{ 'ok' if (row.delivery or '')|lower=='delivery' else '' }}"><i class="fas fa-truck"></i> {{ row.delivery }}</span>
                        {% if g.count > 1 %}
                        <a href="#" class="chip more" onclick="toggleMore('{{ g.pincode }}'); return false;"><i class="fas fa-layer-group"></i> {{ g.count - 1 }} more</a>
                        {% endif %}
                    </div>
                    {% if g.count > 1 %}
                    <div class="more-list" id="more-{{ g.pincode }}" style="display:none">
                        {% for o in g.others %}
                        <div class="more-item">
                            <div class="more-line">
                                <span class="office-small"><i class="fas fa-building"></i> {{ o.officename }}</span>
                                <span class="tags">
                                    <span class="tag"><i class="fas fa-id-card"></i> {{ o.officetype }}</span>
                                    <span class="tag"><i class="fas fa-city"></i> {{ o.district }}</span>
                                    <span class="tag {{ 'ok' if (o.delivery or '')|lower=='delivery' else '' }}"><i class="fas fa-truck"></i> {{ o.delivery }}</span>
                                </span>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Pagination Bottom -->
        {% if total_pages > 1 %}
        <div class="pagination">
            {% if current_page > 1 %}
            <a class="page-btn" href="{{ url_for('pincodes', page=current_page-1, state=current_state, district=current_district, search=search_query) }}"><i class="fas fa-chevron-left"></i> Previous</a>
            {% endif %}
            <span class="page-number">Page {{ current_page }} of {{ total_pages }}</span>
            {% if current_page < total_pages %}
            <a class="page-btn" href="{{ url_for('pincodes', page=current_page+1, state=current_state, district=current_district, search=search_query) }}">Next <i class="fas fa-chevron-right"></i></a>
            {% endif %}
        </div>
        {% endif %}
        {% else %}
        <!-- Empty State -->
        <div class="no-data">
            <div class="no-data-icon"><i class="fas fa-mail-bulk"></i></div>
            <h3>No Pincode Offices Found</h3>
            <p>Try adjusting filters or search terms.</p>
            <a href="{{ url_for('pincodes') }}" class="clear-filters-btn"><i class="fas fa-times"></i> Clear Filters</a>
        </div>
        {% endif %}
    </main>
</div>

<style>
