.tag.ok{background:#e8f5e8;color:#1e7e34}

.pin-modal{position:fixed;inset:0;background:rgba(0,0,0,.45);z-index:1000;display:flex;align-items:center;justify-content:center;padding:20px}
.pin-modal-content{background:#fff;border-radius:14px;box-shadow:0 10px 30px rgba(0,0,0,.2);width:90%;max-width:1100px;min-height:520px;display:grid;grid-template-columns: 420px 1fr;overflow:hidden}
.pin-modal-left{padding:16px 18px;display:flex;flex-direction:column;gap:10px}
.pin-modal-right{position:relative}
.pm-map{height:100%;min-height:520px;width:100%}
.pm-meta{display:flex;flex-wrap:wrap;gap:6px}
.pm-others{margin-top:10px;max-height:220px;overflow:auto;border-top:1px dashed #e1e5e9;padding-top:8px}

</style>
<script>
function toggleMore(pin){
  var el = document.getElementById('more-'+pin);
  if(!el) return;
  el.style.display = (el.style.display==='none' || el.style.display==='') ? 'block' : 'none';
}
// Delegate click on cards to toggle more list
document.addEventListener('click', function(e){
  var card = e.target.closest('.card');
  if(!card) return;
  
  // If clicked on map icon, open map modal
  if(e.target.closest('.map-icon-btn')) {
    var pin = card.getAttribute('data-pin');
    if(pin) {
      openMapModal(pin);
      return;
    }
  }
  
  // If clicked on "more" link, toggle more list
  if(e.target.closest('.more')) {
    var pin = card.getAttribute('data-pin');
    if(pin) {
      toggleMore(pin);
      return;
    }
  }
  
  // For all other card clicks, toggle more list
  var pin = card.getAttribute('data-pin');
  if(pin) {
    toggleMore(pin);
  }
});document.addEventListener('keydown', function(e){

}

}
function openMapModal(pincode) {
    var pinData = { pincode: pincode, main: { officename: "Post Office" }, others: [] };
    openModalWith(pinData);
}
function openMapModal(pincode) {
    var pinData = { pincode: pincode, main: { officename: "Post Office" }, others: [] };
    openModalWith(pinData);
}
function openModalWith(pinData){
    var m=q("#pinModal"); if(!m) return; m.style.display="flex";
    q("#pm-title").textContent = pinData.pincode + " â€¢ " + (pinData.main.officename||"");
    q("#pm-meta").innerHTML = "<span class="tag">"+(pinData.main.statename||"")+"</span>"+
                              "<span class="tag">"+(pinData.main.district||"")+"</span>"+
                              "<span class="tag">"+(pinData.main.officetype||"")+"</span>"+
                              "<span class="tag">"+(pinData.main.delivery||"")+"</span>";
    var others = (pinData.others||[]).map(function(o){
      return "<div class="more-item"><div class="more-line"><span class="office-small">"+(o.officename||"")+
        "</span><span class="tags"><span class="tag">"+(o.officetype||"")+"</span><span class="tag">"+(o.district||"")+
        "</span><span class="tag">"+(o.delivery||"")+"</span></span></div></div>";
    }).join("");
    q("#pm-others").innerHTML = others || "<div class="muted">No other offices for this PIN</div>";
    var pin = pinData.pincode;
    var googleMapsUrl = "https://www.google.com/maps/place/" + pin;
    q("#google-map-iframe").src = googleMapsUrl;
}

window.closePinModal = function(){ var m=q("#pinModal"); if(m) m.style.display="none"; };
function q(sel){return document.querySelector(sel);}
document.addEventListener('keydown', function(e){
  if(e.key==='Enter'){
    var card = document.activeElement && document.activeElement.classList && document.activeElement.classList.contains('card') ? document.activeElement : null;
    if(card){ var pin=card.getAttribute('data-pin'); if(pin){ toggleMore(pin); } }
  }
});
</script>

<div id="pinModal" class="pin-modal" style="display:none">
  <div class="pin-modal-content">
    <div class="pin-modal-left">
      <h3 id="pm-title"></h3>
      <div id="pm-meta" class="pm-meta"></div>
      <div id="pm-others" class="pm-others"></div>
      <button class="btn light" onclick="closePinModal()">Close</button>
    </div>
    <div class="pin-modal-right">
      <div id="pm-map" class="pm-map"><iframe id="google-map-iframe" src="" width="100%" height="100%" frameborder="0" style="border:0;" allowfullscreen="" loading="lazy"></iframe></div>
    </div>
  </div>
</div>


